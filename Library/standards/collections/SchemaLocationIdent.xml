	<!-- SCHEMA -->
	
	<!-- schema::location:unit:ident -->
	<META>
		<NODE term=":location:unit:ident" pid="schema::location:unit:ident">
			<item const="kTAG_NODE_TYPE">
				<item>:type:node:schema</item>
			</item>
			<item const="kTAG_DESCRIPTION">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT"><![CDATA[This schema contains all standard properties describing the identification and notes of a site.]]></item>
				</item>
			</item>
		</NODE>
	
		<!-- Site identification -->
	
		<!-- :location:site:id -->
		<EDGE>
			<item const="kTAG_SUBJECT" node="tag">:location:site:id</item>
			<item const="kTAG_PREDICATE">:predicate:PROPERTY-OF</item>
		</EDGE>
	
		<!-- Notes and comments -->
	
		<!-- :location:site:notes -->
		<EDGE>
			<item const="kTAG_SUBJECT" node="tag">:location:site:notes</item>
			<item const="kTAG_PREDICATE">:predicate:PROPERTY-OF</item>
		</EDGE>
