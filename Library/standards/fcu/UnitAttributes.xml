	<!-- Unit attributes -->
	
	<!-- fcu:unit:number -->
	<META>
		<TERM ns="fcu:unit" lid="number">
			<item const="kTAG_LABEL">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT">Unit number</item>
				</item>
			</item>
			<item const="kTAG_DEFINITION">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT">Unit unique identifier.</item>
				</item>
			</item>
		</TERM>
		<TAG>
			<item const="kTAG_TERMS">
				<item>fcu:unit:number</item>
			</item>
			<item const="kTAG_DATA_TYPE">:type:string</item>
			<item const="kTAG_DATA_KIND">
				<item>:type:discrete</item>
			</item>
			<item const="kTAG_SYNONYM">
				<item>UnitNumber</item>
			</item>
			<item const="kTAG_DESCRIPTION">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT"><![CDATA[This number is the <em>unique identifier of the unit</em> described.  This number <em>should not be duplicated or reassigned to another unit</em>.]]></item>
				</item>
			</item>
		</TAG>
	</META>
	
	<!-- fcu:unit:gene-number -->
	<META>
		<TERM ns="fcu:unit" lid="gene-number">
			<item const="kTAG_LABEL">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT">National unit number</item>
				</item>
			</item>
			<item const="kTAG_DEFINITION">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT">National gene conservation unit number.</item>
				</item>
			</item>
		</TERM>
		<TAG>
			<item const="kTAG_TERMS">
				<item>fcu:unit:gene-number</item>
			</item>
			<item const="kTAG_DATA_TYPE">:type:string</item>
			<item const="kTAG_DATA_KIND">
				<item>:type:discrete</item>
			</item>
			<item const="kTAG_SYNONYM">
				<item>UnitGeneNumber</item>
			</item>
			<item const="kTAG_DESCRIPTION">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT"><![CDATA[Unit number <em>from the national registry</em>.]]></item>
				</item>
			</item>
		</TAG>
	</META>
	
