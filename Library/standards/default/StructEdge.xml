<?xml version="1.0" encoding="UTF-8"?>
<!--
	EDGE STRUCTURE
	StructEdge.xml
-->
<METADATA
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://resources.grinfo.net/Schema/Dictionary.xsd">
	
	<!-- EDGE -->
	
	<!-- _edges -->
	<META>
		 <TERM lid="_edges">
			<item const="kTAG_LABEL">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT">Term</item>
				</item>
			</item>
			<item const="kTAG_DEFINITION">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT"><![CDATA[The edge implements a <em>directed graph</em> by <em>relating a subject vertex</em> with an <em>object vertex</em> through a <em>predicate</em>, the direction of the relationship is <em>from the subject to the object</em>.]]></item>
				</item>
			</item>
		</TERM>
		<NODE>
			<item const="kTAG_NODE_TYPE">
				<item>:kind:root-node</item>
				<item>:type:node:struct</item>
			</item>
			<item const="kTAG_DESCRIPTION">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT"><![CDATA[This structure contains all default properties of edge objects.]]></item>
				</item>
			</item>
		</NODE>
	</META>
	
	<!-- PROPERTIES -->
	
	<!-- kTAG_NID -->
	<META>
		<NODE term="_id" pid="_edges:_id">
			<item const="kTAG_DESCRIPTION">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT"><![CDATA[This required attribute holds a <em>string</em> which represents the <em>combination of the subject, predicate and object</em> of the relationship. This attribute will be set automatically.]]></item>
				</item>
			</item>
		</NODE>
		<EDGE>
			<item const="kTAG_PREDICATE">:relationship:predicate:ATTRIBUTE-OF</item>
			<item const="kTAG_OBJECT" node="term">_edges</item>
		</EDGE>
	</META>
	
	<!-- kTAG_ID_GRAPH -->
	<META>
		<NODE tag=":id-graph" pid="_edges::id-graph">
			<item const="kTAG_NODE_TYPE">
				<item>:kind:property-node</item>
			</item>
			<item const="kTAG_DESCRIPTION">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT"><![CDATA[This attribute holds an integer which represents the reference to the edge stored in the graph database.]]></item>
				</item>
			</item>
		</NODE>
		<EDGE>
			<item const="kTAG_PREDICATE">:relationship:predicate:PROPERTY-OF</item>
			<item const="kTAG_OBJECT" node="term">_edges</item>
		</EDGE>
	</META>
	
	<!-- kTAG_SUBJECT -->
	<META>
		<NODE tag=":relationship:subject" pid="_edges::relationship:subject">
			<item const="kTAG_NODE_TYPE">
				<item>:kind:property-node</item>
			</item>
			<item const="kTAG_DESCRIPTION">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT"><![CDATA[This attribute represents the <em>origin of the relationship</em>, it is an <em>integer</em> value representing the <em>reference to a node instance</em>.]]></item>
				</item>
			</item>
		</NODE>
		<EDGE>
			<item const="kTAG_PREDICATE">:relationship:predicate:PROPERTY-OF</item>
			<item const="kTAG_OBJECT" node="term">_edges</item>
		</EDGE>
	</META>
	
	<!-- kTAG_GRAPH_SUBJECT -->
	<META>
		<NODE tag=":relationship:graph-subject" pid="_edges::relationship:graph-subject">
			<item const="kTAG_NODE_TYPE">
				<item>:kind:property-node</item>
			</item>
			<item const="kTAG_DESCRIPTION">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT"><![CDATA[This attribute is an <em>integer</em> value <em>referencing a graph source vertex node</em>. The referenced node is stored in the <em>graph database</em>]]></item>
				</item>
			</item>
		</NODE>
		<EDGE>
			<item const="kTAG_PREDICATE">:relationship:predicate:PROPERTY-OF</item>
			<item const="kTAG_OBJECT" node="term">_edges</item>
		</EDGE>
	</META>
	
	<!-- kTAG_PREDICATE -->
	<META>
		<NODE tag=":relationship:predicate" pid="_edges::relationship:predicate">
			<item const="kTAG_NODE_TYPE">
				<item>:kind:property-node</item>
			</item>
			<item const="kTAG_DESCRIPTION">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT"><![CDATA[This attribute represents the <em>type of relationship</em>, it is a <em>string</em> value representing the <em>reference to a term instance</em>.]]></item>
				</item>
			</item>
		</NODE>
		<EDGE>
			<item const="kTAG_PREDICATE">:relationship:predicate:PROPERTY-OF</item>
			<item const="kTAG_OBJECT" node="term">_edges</item>
		</EDGE>
	</META>
	
	<!-- kTAG_OBJECT -->
	<META>
		<NODE tag=":relationship:object" pid="_edges::relationship:object">
			<item const="kTAG_NODE_TYPE">
				<item>:kind:property-node</item>
			</item>
			<item const="kTAG_DESCRIPTION">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT"><![CDATA[This attribute represents the <em>destination of the relationship</em>, it is an <em>integer</em> value representing the <em>reference to a node instance</em>.]]></item>
				</item>
			</item>
		</NODE>
		<EDGE>
			<item const="kTAG_PREDICATE">:relationship:predicate:PROPERTY-OF</item>
			<item const="kTAG_OBJECT" node="term">_edges</item>
		</EDGE>
	</META>
	
	<!-- kTAG_GRAPH_OBJECT -->
	<META>
		<NODE tag=":relationship:graph-object" pid="_edges::relationship:graph-object">
			<item const="kTAG_NODE_TYPE">
				<item>:kind:property-node</item>
			</item>
			<item const="kTAG_DESCRIPTION">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT"><![CDATA[This attribute is an <em>integer</em> value <em>referencing a graph destination vertex node</em>. The referenced node is stored in the <em>graph database</em>]]></item>
				</item>
			</item>
		</NODE>
		<EDGE>
			<item const="kTAG_PREDICATE">:relationship:predicate:PROPERTY-OF</item>
			<item const="kTAG_OBJECT" node="term">_edges</item>
		</EDGE>
	</META>
	
	<!-- :ref-count -->
	<META>
		<EDGE>
			<item const="kTAG_SUBJECT" node="pid">schema::ref-count</item>
			<item const="kTAG_PREDICATE">:relationship:predicate:SUBCLASS-OF</item>
			<item const="kTAG_OBJECT" node="term">_edges</item>
		</EDGE>
	</META>
</METADATA>
