<?xml version="1.0" encoding="UTF-8"?>
<!--
	EDGE STRUCTURE
	StructEdge.xml
-->
<METADATA
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="https://gist.githubusercontent.com/milko/f2dcea3c3a94f69bb0bb/raw/715d8fd15a66ad25466c9efc4f767fd31fc9a21a/Dictionary.xsd">
	
	<!-- EDGE -->
	
	<!-- _edges -->
	<META>
		 <TERM lid="_edges">
			<item const="kTAG_LABEL">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT">Term</item>
				</item>
			</item>
			<item const="kTAG_DEFINITION">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT"><![CDATA[The edge implements a directed graph by relating a subject vertex with an object vertex through a predicate, the direction of the relationship is from the subject to the object.]]></item>
				</item>
			</item>
		</TERM>
		<NODE>
			<item const="kTAG_NODE_TYPE">
				<item>:kind:root-node</item>
				<item>:type:node:struct</item>
			</item>
			<item const="kTAG_DESCRIPTION">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT"><![CDATA[This structure contains all default properties of edge objects.]]></item>
				</item>
			</item>
		</NODE>
	</META>
	
	<!-- PROPERTIES -->
	
	<!-- kTAG_NID -->
	<META>
		<NODE term="_id" pid="_edges:_id">
			<item const="kTAG_DESCRIPTION">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT"><![CDATA[This required attribute holds a string which represents the combination of the subject, predicate and object of the relationship. This attribute will be set automatically.]]></item>
				</item>
			</item>
		</NODE>
		<EDGE>
			<item const="kTAG_PREDICATE">:predicate:ATTRIBUTE-OF</item>
			<item const="kTAG_OBJECT" node="term">_edges</item>
		</EDGE>
	</META>
	
	<!-- kTAG_ID_GRAPH -->
	<META>
		<NODE tag=":id-graph" pid="_edges::id-graph">
			<item const="kTAG_NODE_TYPE">
				<item>:kind:property-node</item>
			</item>
			<item const="kTAG_DESCRIPTION">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT"><![CDATA[This attribute holds an integer which represents the reference to the edge stored in the graph database.]]></item>
				</item>
			</item>
		</NODE>
		<EDGE>
			<item const="kTAG_PREDICATE">:predicate:PROPERTY-OF</item>
			<item const="kTAG_OBJECT" node="term">_edges</item>
		</EDGE>
	</META>
	
	<!-- kTAG_SUBJECT -->
	<META>
		<NODE tag=":relationship:subject" pid="_edges::relationship:subject">
			<item const="kTAG_NODE_TYPE">
				<item>:kind:property-node</item>
			</item>
			<item const="kTAG_DESCRIPTION">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT"><![CDATA[This attribute represents the origin of the relationship, it is an integer value representing the reference to a node instance.]]></item>
				</item>
			</item>
		</NODE>
		<EDGE>
			<item const="kTAG_PREDICATE">:predicate:PROPERTY-OF</item>
			<item const="kTAG_OBJECT" node="term">_edges</item>
		</EDGE>
	</META>
	
	<!-- kTAG_GRAPH_SUBJECT -->
	<META>
		<NODE tag=":relationship:graph-subject" pid="_edges::relationship:graph-subject">
			<item const="kTAG_NODE_TYPE">
				<item>:kind:property-node</item>
			</item>
			<item const="kTAG_DESCRIPTION">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT"><![CDATA[This attribute is an integer value referencing a graph source vertex node. The referenced node is stored in the graph database]]></item>
				</item>
			</item>
		</NODE>
		<EDGE>
			<item const="kTAG_PREDICATE">:predicate:PROPERTY-OF</item>
			<item const="kTAG_OBJECT" node="term">_edges</item>
		</EDGE>
	</META>
	
	<!-- kTAG_PREDICATE -->
	<META>
		<NODE tag=":predicate" pid="_edges::predicate">
			<item const="kTAG_NODE_TYPE">
				<item>:kind:property-node</item>
			</item>
			<item const="kTAG_DESCRIPTION">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT"><![CDATA[This attribute represents the type of relationship, it is a string value representing the reference to a term instance.]]></item>
				</item>
			</item>
		</NODE>
		<EDGE>
			<item const="kTAG_PREDICATE">:predicate:PROPERTY-OF</item>
			<item const="kTAG_OBJECT" node="term">_edges</item>
		</EDGE>
	</META>
	
	<!-- kTAG_OBJECT -->
	<META>
		<NODE tag=":relationship:object" pid="_edges::relationship:object">
			<item const="kTAG_NODE_TYPE">
				<item>:kind:property-node</item>
			</item>
			<item const="kTAG_DESCRIPTION">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT"><![CDATA[This attribute represents the destination of the relationship, it is an integer value representing the reference to a node instance.]]></item>
				</item>
			</item>
		</NODE>
		<EDGE>
			<item const="kTAG_PREDICATE">:predicate:PROPERTY-OF</item>
			<item const="kTAG_OBJECT" node="term">_edges</item>
		</EDGE>
	</META>
	
	<!-- kTAG_GRAPH_OBJECT -->
	<META>
		<NODE tag=":relationship:graph-object" pid="_edges::relationship:graph-object">
			<item const="kTAG_NODE_TYPE">
				<item>:kind:property-node</item>
			</item>
			<item const="kTAG_DESCRIPTION">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT"><![CDATA[This attribute is an integer value referencing a graph destination vertex node. The referenced node is stored in the graph database]]></item>
				</item>
			</item>
		</NODE>
		<EDGE>
			<item const="kTAG_PREDICATE">:predicate:PROPERTY-OF</item>
			<item const="kTAG_OBJECT" node="term">_edges</item>
		</EDGE>
	</META>
	
	<!-- :ref-count -->
	<META>
		<EDGE>
			<item const="kTAG_SUBJECT" node="pid">schema::ref-count</item>
			<item const="kTAG_PREDICATE">:predicate:SUBCLASS-OF</item>
			<item const="kTAG_OBJECT" node="term">_edges</item>
		</EDGE>
	</META>
	
	<!-- :record -->
	<META>
		<EDGE>
			<item const="kTAG_SUBJECT" node="pid">schema::record</item>
			<item const="kTAG_PREDICATE">:predicate:SUBCLASS-OF</item>
			<item const="kTAG_OBJECT" node="term">_edges</item>
		</EDGE>
	</META>
</METADATA>
