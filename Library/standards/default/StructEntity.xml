	<!-- ENTITY -->
	
	<!-- _entities -->
	<META>
		<TERM lid="_entities">
			<item const="kTAG_LABEL">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT">Entity</item>
				</item>
			</item>
			<item const="kTAG_DEFINITION">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT"><![CDATA[Entities represent people and organisations, it generally represents the collection of ctors in the system.]]></item>
				</item>
			</item>
		</TERM>
		<NODE>
			<item const="kTAG_NODE_TYPE">
				<item>:kind:root-node</item>
				<item>:type:node:struct</item>
			</item>
			<item const="kTAG_DESCRIPTION">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT"><![CDATA[This structure contains all default properties of entity objects.]]></item>
				</item>
			</item>
		</NODE>
	</META>
	
	<!-- DEFAULT PROPERTIES -->
	
	<!-- kTAG_NID -->
	<META>
		<NODE term="_id" pid="_entities:_id">
			<item const="kTAG_DESCRIPTION">
				<item>
					<item const="kTAG_LANGUAGE">en</item>
					<item const="kTAG_TEXT"><![CDATA[Entities are identified by the combination of the domain, authority, collection and identifier.]]></item>
				</item>
			</item>
		</NODE>
		<EDGE>
			<item const="kTAG_PREDICATE">:predicate:ATTRIBUTE-OF</item>
			<item const="kTAG_OBJECT" node="term">_entities</item>
		</EDGE>
	</META>
	
